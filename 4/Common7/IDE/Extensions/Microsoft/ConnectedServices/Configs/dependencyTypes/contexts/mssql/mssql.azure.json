                "value": "GitHubWorkflow"
              },
              {
                "kind": "EnvironmentProperty",
                "property": "TargetId",
                "value": "AzDevAppService"
              }
            ]
          },
          {
            "kind": "HasProjectCapability",
            "capability": "DotNetCoreWeb"
          }
        ]
      },
      "config": "mssql.azure.appService.coreweb"
    },
    {
      "when": {
        "kind": "and",
        "operands": [
          {
            "kind": "EnvironmentProperty",
            "property": "PublishProvider",
            "value": "ContainerApp"
          },
          {
            "kind": "and",
            "operands": [
              {
                "kind": "HasProjectCapability",
                "capability": "CPS"
              },
              {
                "kind": "HasProjectCapability",
                "capability": ".NET"
              }
            ]
          }
        ]
      },
      "config": "mssql.azure.containerApp.core"
    },
    {
      "when": {
        "kind": "and",
        "operands": [
          {
            "kind": "or",
            "operands": [
              {
                "kind": "EnvironmentProperty",
                "property": "PublishProvider",
                "value": "AzureWebSite"
              },
              {
                "kind": "EnvironmentProperty",
                "property": "PublishProvider",
                "value": "AppServiceContainer"
              },
              {
                "kind": "EnvironmentProperty",
                "property": "PublishProvider",
                "value": "FunctionsContainer"
              },
              {
                "kind": "EnvironmentProperty",
                "property": "PublishProvider",
                "value": "GitHubWorkflow"
              },
              {
                "kind": "EnvironmentProperty",
                "property": "TargetId",
                "value": "AzDevAppService"
              }
            ]
          },
          {
            "kind": "not",
            "operand": {
              "kind": "HasProjectCapability",
              "capability": "DotNetCoreWeb"
            }
          }
        ]
      },
      "config": "mssql.azure.appService"
    }
