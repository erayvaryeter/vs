    {
      "when": {
        "kind": "and",
        "operands": [
          {
            "kind": "EnvironmentId",
            "id": "local"
          },
          {
            "kind": "HasProjectCapability",
            "capability": "DotNetCoreWeb"
          }
        ]
      },
      "config": "mssql.azure.local.coreweb"
    },
    {
      "when": {
        "kind": "and",
        "operands": [
          {
            "kind": "EnvironmentId",
            "id": "local"
          },
          {
            "kind": "not",
            "operand": {
              "kind": "HasProjectCapability",
              "capability": "DotNetCoreWeb"
            }
          }
        ]
      },
      "config": "mssql.azure.local"
    },
    {
      "when": {
        "kind": "and",
        "operands": [
          {
