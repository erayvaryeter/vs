<CodeSnippet Format="1.1.0" xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <Header>
    <Title>media query for a tablet</Title>
    <Author>Microsoft Corporation</Author>
    <Shortcut>@media-tablet</Shortcut>
    <Description>A media query for a typical tablet resolution</Description>
    <SnippetTypes>
      <SnippetType>Expansion</SnippetType>
      <SnippetType>SurroundsWith</SnippetType>
    </SnippetTypes>
  </Header>
  <Snippet>
    <Declarations>
      <Literal>
        <ID>minwidth</ID>
        <ToolTip>Min width value</ToolTip>
        <Default>768px</Default>
      </Literal>
      <Literal>
        <ID>maxwidth</ID>
        <ToolTip>Max width value</ToolTip>
        <Default>834px</Default>
      </Literal>
    </Declarations>
    <Code Language="css" Kind="AtDirectiveName">
        <![CDATA[/* typical tablet screen resolution */
@media only screen and (max-width : $maxwidth$) {
  $selected$$end$
}
/* landscape orientation */
@media only screen and (min-width : $minwidth$) and (max-width : $maxwidth$) and (orientation : landscape) {
}
/* portrait orientation */
@media only screen and (min-width : $minwidth$) and (max-width : $maxwidth$) and (orientation : portrait) {
}]]></Code>
  </Snippet>
</CodeSnippet>
